# Automation Scout - Production Configuration
# Copy this file to .env and customize for your deployment

# CRITICAL: Set these values for production deployment
AS_ENVIRONMENT=production
AS_NAME="Automation Scout"
AS_VERSION=1.0.0

# Logging Configuration
AS_LOG_LEVEL=info
AS_LOG_FILE=./logs/automation-scout.log
AS_LOG_MAX_SIZE_MB=100
AS_LOG_ROTATE_COUNT=5

# Privacy & Security Settings (REQUIRED for production)
AS_CONSENT_REQUIRED=true
AS_DATA_RETENTION_DAYS=90
AS_ENCRYPTION_ENABLED=true
AS_ENCRYPTION_KEY=CHANGE_THIS_TO_SECURE_256_BIT_KEY_IN_PRODUCTION
AS_AUDIT_LOG_ENABLED=true
AS_REDACT_SENSITIVE_DATA=true
AS_ALLOW_TELEMETRY=false

# Database Configuration
AS_DATABASE_PATH=./data/automation-scout.db
AS_DATABASE_ENABLE_WAL=true
AS_DATABASE_BUSY_TIMEOUT=10000
AS_DATABASE_MAX_CONNECTIONS=5
AS_DATABASE_BACKUP_ENABLED=true
AS_DATABASE_BACKUP_INTERVAL=86400000

# Pattern Mining Settings
AS_PATTERN_MINING_ENABLED=true
AS_MIN_SUPPORT=3
AS_MIN_CONFIDENCE=0.7
AS_MAX_PATTERN_LENGTH=8
AS_ANALYSIS_INTERVAL=300000
AS_EXCLUDE_PATTERNS=password,credit_card,social_security

# Automation Runtime Configuration
AS_AUTOMATION_ENABLED=true
AS_AUTOMATION_DRY_RUN_MODE=true
AS_AUTOMATION_MAX_CONCURRENT_JOBS=2
AS_AUTOMATION_JOB_TIMEOUT=300000
AS_AUTOMATION_RETRY_ATTEMPTS=2
AS_AUTOMATION_RETRY_DELAY=5000

# Domain Security (IMPORTANT: Configure for client's environment)
AS_AUTOMATION_ALLOWED_DOMAINS=client.com,*.client.com,trusted-partner.com
AS_AUTOMATION_BLOCKED_DOMAINS=malicious.com,untrusted.com

# LLM Integration (Configure if client wants AI features)
AS_LLM_ENABLED=false
AS_LLM_PROVIDER=openai
AS_LLM_API_KEY=your-openai-api-key-here
AS_LLM_ENDPOINT=https://api.openai.com/v1
AS_LLM_MODEL=gpt-4-turbo-preview
AS_LLM_MAX_TOKENS=4096
AS_LLM_TEMPERATURE=0.1
AS_LLM_TIMEOUT=30000

# Network Configuration
AS_NETWORK_PROXY_ENABLED=false
AS_NETWORK_PROXY_HOST=
AS_NETWORK_PROXY_PORT=
AS_NETWORK_PROXY_AUTH=
AS_NETWORK_USER_AGENT=Automation-Scout/1.0.0
AS_NETWORK_TIMEOUT=30000
AS_NETWORK_MAX_REDIRECTS=5

# System Performance & Resource Limits
AS_SYSTEM_MAX_MEMORY_MB=512
AS_SYSTEM_MAX_CPU_PERCENT=25
AS_SYSTEM_ENABLE_PERFORMANCE_MONITORING=true
AS_SYSTEM_PERFORMANCE_THROTTLING=true
AS_SYSTEM_GC_INTERVAL=60000

# Windows Integration
AS_WINDOWS_START_WITH_WINDOWS=true
AS_WINDOWS_HIDE_CONSOLE_WINDOW=true
AS_WINDOWS_ENABLE_SYSTEM_TRAY=true
AS_WINDOWS_CAPTURE_WINDOW_TITLES=true
AS_WINDOWS_CAPTURE_KEYSTROKES=false
AS_WINDOWS_CAPTURE_MOUSE_CLICKS=true

# Feature Flags
AS_FEATURE_ENABLE_BROWSER_AUTOMATION=true
AS_FEATURE_ENABLE_FILE_OPERATIONS=true
AS_FEATURE_ENABLE_NETWORK_REQUESTS=true
AS_FEATURE_ENABLE_SYSTEM_COMMANDS=false
AS_FEATURE_ENABLE_CLIPBOARD_ACCESS=true
AS_FEATURE_ENABLE_SCREEN_CAPTURE=false

# Compliance & Regulatory
AS_COMPLIANCE_GDPR_COMPLIANCE=true
AS_COMPLIANCE_CCPA_COMPLIANCE=true
AS_COMPLIANCE_HIPAA_COMPLIANCE=false
AS_COMPLIANCE_SOX_COMPLIANCE=false
AS_COMPLIANCE_DATA_PROCESSING_PURPOSE="workflow automation and optimization"
AS_COMPLIANCE_DATA_CONTROLLER="CLIENT_COMPANY_NAME"

# Client-Specific Settings (Customize for deployment)
AS_CLIENT_COMPANY_NAME="Your Client Company"
AS_CLIENT_SUPPORT_EMAIL="support@client.com"
AS_CLIENT_SUPPORT_PHONE="+1-555-0123"
AS_CLIENT_PRIVACY_OFFICER="privacy@client.com"

# Installation & Updates
AS_INSTALL_AUTO_UPDATE=false
AS_INSTALL_UPDATE_CHANNEL=stable
AS_INSTALL_TELEMETRY_ENABLED=false

# Error Reporting & Monitoring
AS_ERROR_REPORTING_ENABLED=true
AS_ERROR_SENTRY_DSN=
AS_MONITORING_HEALTH_CHECK_INTERVAL=60000
AS_MONITORING_METRICS_ENABLED=true

# Development/Debug Settings (DISABLE for production)
AS_DEBUG_ENABLED=false
AS_DEBUG_VERBOSE_LOGGING=false
AS_DEBUG_SKIP_CONSENT=false
AS_DEBUG_MOCK_DATA=false